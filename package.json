		"mjml": {
			"minify": true
		},
		"paths": {
			"dist": "./dist",
			"src": "./src",
			"tmp": "./tmp"
		}
	},
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "del": "^3.0.0",
