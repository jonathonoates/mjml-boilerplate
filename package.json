{
	"name": "mjml-boilerplate",
	"version": "1.0.0",
	"description": "mjml-boilerplate",
  "author": "Jonathon Oates",
	"license": "UNLICENSED",
	"repository": {
		"type": "git",
		"url": "https://github.com/jonathonoates/mjml-boilerplate.git"
	},
	"scripts": {
		"mjml": "mjml './tmp/*.mjml' -o './dist'",
		"start": "gulp default",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"config": {
		"browserSync": {
			"port": 8080,
